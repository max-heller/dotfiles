# Load configs
git clone https://github.com/mxheller/configs.git ~/configs

# Install GRUB theme and update GRUB
wget -O - https://github.com/shvchk/poly-dark/raw/master/install.sh | bash
sudo grub-mkconfig -o /boot/grub/grub.cfg

# Link dotfiles
./link.sh

# Set ZSH as shell
chsh -s /usr/bin/zsh
